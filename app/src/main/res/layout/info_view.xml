<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_dimension"
    android:layout_height="@dimen/dialog_dimension">

    <TextView
        android:id="@+id/info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/close_button"
        android:padding="@dimen/activity_margin" />

    <Button
        android:id="@+id/close_button"
        android:layout_width="@dimen/button_dim"
        android:layout_height="@dimen/button_dim"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/close" />
</RelativeLayout>